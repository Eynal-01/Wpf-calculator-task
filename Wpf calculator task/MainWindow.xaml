                Foreground="white"
                Click="OneBtn_Click"
                >
            </Button>
            <Button Style="{DynamicResource ButtonStyle1}"
                Name="Plus"
                Width="60"
                Height="60"
                Canvas.Left="220"   
                Canvas.Top="220"
                Background="#302D2D"
                BorderThickness="0"
                Padding="2, 2, 2, 8"
                Content="+"
                FontSize="30"
                Foreground="#00BC1A"
                Click="Plus_Click"
                >
            </Button>
            <Button Style="{DynamicResource ButtonStyle1}"
                Name="PlusMinus"
                Width="60"
                Height="60"
                Canvas.Left="10"   
                Canvas.Top="290"
                Background="#302D2D"
                BorderThickness="0"    
                Content="+/-"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#00BC1A"
                Click="PlusMinus_Click"
                >
            </Button>
            <Button Style="{DynamicResource ButtonStyle1}"
                Name="ZeroBtn"
                Width="60"
                Height="60"
                Canvas.Left="80"   
                Canvas.Top="290"
                Background="#302D2D"
                BorderThickness="0"
                Content="0"
                FontSize="20"
                Foreground="white"
                Click="ZeroBtn_Click"
                >
            </Button>
            <Button Style="{DynamicResource ButtonStyle1}"
                Name="Point"
                Width="60"
                Height="60"
                Canvas.Left="150"   
                Canvas.Top="290"
                Background="#302D2D"
                BorderThickness="0"
                Content="."
                FontSize="30"
                Foreground="white"
                Click="Point_Click"
                >
            </Button>
            <Button Style="{DynamicResource ButtonStyle1}"
                Name="Equals"
                Width="60"
                Height="60"
                Canvas.Left="220"   
                Canvas.Top="290"
                Background="#00BC1A"
                BorderThickness="0"
                Padding="0, 0, 0, 6"
                Content="="
                FontSize="30"
                Foreground="white" 
                Click="Equals_Click"    
                >
            </Button>
        </Canvas>

    </Grid>
</Window>
